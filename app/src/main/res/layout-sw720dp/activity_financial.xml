<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.khleuven.kvh.ksprong.activities.FinancialActivity"
    android:id="@+id/financialact">




    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/attendancebutText"
        android:id="@+id/attendancefinbut"
        android:layout_gravity="center_horizontal"
        android:height="100dp"
        android:width="400dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/paymentbutText"
        android:id="@+id/paymentfinbut"
        android:layout_below="@id/attendancefinbut"
        android:layout_gravity="center_horizontal"
        android:width="400dp"
        android:height="100dp"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dropboxtext"
        android:id="@+id/dropboxbut"
        android:layout_below="@id/paymentfinbut"
        android:layout_gravity="center_horizontal"
        android:height="100dp"
        android:width="400dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
